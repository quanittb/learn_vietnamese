<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_radius"
    android:padding="@dimen/_10sdp"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.cardview.widget.CardView
        android:layout_width="@dimen/_50sdp"
        android:layout_height="@dimen/_80sdp"
        app:cardCornerRadius="@dimen/_5sdp">
        <ImageView
            android:id="@+id/image"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:adjustViewBounds="true"
            android:src="@drawable/test_gift" />
    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/_6sdp"
        android:orientation="vertical">
        <TextView
            android:id="@+id/txt_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Bộ sách nói Thời thơ ấu"
            android:textColor="@color/black"
            android:textSize="@dimen/_12sdp"
            android:fontFamily="@font/roboto_medium"/>
        <TextView
            android:id="@+id/txt_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Làm quen với các Tổng thống Hợp Chủng Quốc Hoa Kỳ và các nguyên"
            android:textColor="#808080"
            android:maxLines="2"
            android:textSize="@dimen/_10sdp"
            android:fontFamily="@font/roboto_medium"/>
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="@dimen/_5ssp"
            android:layout_weight="1">
            <TextView
                android:id="@+id/txt_ruby"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2087"
                android:textSize="@dimen/_14sdp"
                android:fontFamily="@font/roboto_medium"
                android:textColor="@color/black"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"/>
            <ImageView
                android:id="@+id/ic_ruby"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_ruby"
                app:layout_constraintLeft_toRightOf="@id/txt_ruby"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginLeft="@dimen/_2sdp"/>
            <TextView
                android:id="@+id/btnReceive"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/receive_gift"
                android:fontFamily="@font/roboto_bold"
                android:background="@drawable/bg_disable_receive_gift"
                android:gravity="center"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:textSize="@dimen/_12sdp"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </LinearLayout>
</LinearLayout>