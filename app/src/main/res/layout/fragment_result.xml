<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingVertical="@dimen/_8sdp"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:background="@color/white"
    android:paddingHorizontal="@dimen/_14sdp"
    android:id="@+id/ln_result_fragment"
    android:focusable="true"
    android:clickable="true">
   <LinearLayout
       android:id="@+id/ll_title"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:orientation="horizontal"
       android:gravity="center_vertical"
       app:layout_constraintTop_toTopOf="parent">
       <ImageView
           android:id="@+id/iv_close"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
            android:padding="@dimen/_4sdp"
           android:src="@drawable/ic_close"/>
       <TextView
           android:layout_width="0dp"
           android:layout_height="wrap_content"
           android:layout_weight="1"
           android:text="@string/result"
           android:fontFamily="@font/gilroy_semi_bold"
           android:textSize="@dimen/_16ssp"
           android:textColor="@color/black"
           android:gravity="center"/>
       <ImageView
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:padding="@dimen/_4sdp"
           android:visibility="invisible"
           android:src="@drawable/ic_close"/>
   </LinearLayout>
    <ImageView
        android:id="@+id/ic"
        android:layout_width="@dimen/_200sdp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/ll_title"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:paddingHorizontal="@dimen/_30sdp"
        android:adjustViewBounds="true"
        android:src="@drawable/ic_congratulation"
        android:layout_marginTop="@dimen/_50sdp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="@string/congratulations"
        android:textColor="@color/black"
        android:layout_marginTop="@dimen/_14sdp"
        android:fontFamily="@font/roboto_bold"
        android:textSize="@dimen/_24ssp"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="@string/you_have_just_completed_the_excellent_challenge"
        android:textColor="#828282"
        android:layout_marginTop="@dimen/_14sdp"
        android:fontFamily="@font/roboto_medium"
        android:textSize="@dimen/_13ssp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/name"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="@dimen/_20sdp"
        android:orientation="horizontal">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:padding="@dimen/_14sdp"
            android:background="@drawable/bg_item_profile"
            android:layout_marginHorizontal="@dimen/_5sdp"
            android:layout_weight="1">
            <ImageView
                android:id="@+id/ic_ruby"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                android:src="@drawable/ic_ruby"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"/>
            <TextView
                android:id="@+id/txt_ruby"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toRightOf="@id/ic_ruby"
                android:text="1000"
                android:fontFamily="@font/roboto_black"
                android:textSize="@dimen/_16sdp"
                android:textColor="@color/black"
                android:layout_marginLeft="@dimen/_14sdp"/>
            <TextView
                android:id="@+id/ruby_description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/txt_ruby"
                app:layout_constraintLeft_toLeftOf="@id/txt_ruby"
                android:text="@string/total_ruby"
                android:fontFamily="@font/roboto_medium"
                android:textSize="@dimen/_12sdp"
                android:textColor="@color/gray_text"
                android:layout_marginTop="@dimen/_2sdp"
                />

        </androidx.constraintlayout.widget.ConstraintLayout>
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:padding="@dimen/_14sdp"
            android:layout_marginHorizontal="@dimen/_5sdp"
            android:background="@drawable/bg_item_profile"
            android:layout_weight="1">
            <ImageView
                android:id="@+id/ic_experience"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                android:src="@drawable/ic_experience"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"/>
            <TextView
                android:id="@+id/txt_experience"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toRightOf="@id/ic_experience"
                android:text="1000"
                android:fontFamily="@font/roboto_black"
                android:textSize="@dimen/_16sdp"
                android:textColor="@color/black"
                android:layout_marginLeft="@dimen/_14sdp"/>
            <TextView
                android:id="@+id/experience_description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/txt_experience"
                app:layout_constraintLeft_toLeftOf="@id/txt_experience"
                android:text="@string/total_xp"
                android:fontFamily="@font/roboto_medium"
                android:textSize="@dimen/_12sdp"
                android:textColor="@color/gray_text"
                android:layout_marginTop="@dimen/_2sdp"
                />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </LinearLayout>
    <TextView
        android:id="@+id/btn_continue"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/blue_primary"
        android:background="@drawable/bg_share"
        android:textColor="@color/white"
        android:fontFamily="@font/roboto_bold"
        android:textSize="@dimen/_14sdp"
        android:text="@string/_continue"
        android:gravity="center"
        android:paddingVertical="@dimen/_12sdp"
        android:layout_marginTop="@dimen/_30sdp"
        />
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/btn_share"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_share"
        android:layout_marginVertical="@dimen/_12sdp"
        android:paddingVertical="@dimen/_10sdp">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toLeftOf="@+id/tv_share"
            android:layout_marginHorizontal="@dimen/_5sdp"
            android:src="@drawable/ic_share"/>
        <TextView
            android:id="@+id/tv_share"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/blue_primary"
            android:fontFamily="@font/roboto_bold"
            android:textSize="@dimen/_14sdp"
            android:text="@string/share"
            android:gravity="center"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

</LinearLayout>